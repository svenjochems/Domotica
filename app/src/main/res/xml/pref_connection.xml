<PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android">


    <EditTextPreference
        android:key="@string/pref_key_ip"
        android:title="@string/pref_title_ip"
        android:defaultValue="@string/pref_default_ip"
        android:selectAllOnFocus="true"
        android:inputType="phone"
        android:capitalize="none"
        android:singleLine="true"
        android:maxLines="1" />
    <EditTextPreference
        android:key="@string/pref_key_port"
        android:title="@string/pref_title_port"
        android:defaultValue="@string/pref_default_port"
        android:selectAllOnFocus="true"
        android:inputType="numberDecimal"
        android:capitalize="none"
        android:singleLine="true"
        android:maxLines="1" />



</PreferenceScreen>
